        }
        stage('dataset test') {
            echo 'Doing clean ova and set system config'
            sh script: """
            export NVM_DIR=/opt/nvm
            . /opt/nvm/nvm.sh
            node $WORKSPACE/src/test/qa/dataset.js --server '${dataset_ip}' --aging_timeout 1 --dataset_size 1024
